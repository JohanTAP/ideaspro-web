---
interface Props {
	title: string;
	description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="es-CL">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content={description} />
		<title>{title}</title>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	</head>
	<body class="max-w-6xl px-10 pt-40 mx-auto">
		<video
			id="bgvid"
			playsinline
			autoplay
			muted
			loop
			style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; z-index: -1000;"
		>
			<source src="/video.webm" type="video/webm" />
		</video>
		<div>
			<slot />
		</div>
	</body>
</html>

<style is:global>
	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
		overflow: hidden;
	}

	body {
		background: transparent;
		position: relative;
	}

	body::after {
		content: "";
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: rgba(128, 0, 128, 0.5);
		z-index: -1;
	}

	#bgvid {
		position: fixed;
		right: 0;
		bottom: 0;
		min-width: 100%;
		min-height: 100%;
		z-index: -2;
	}
</style>
